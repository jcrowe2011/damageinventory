= form_for [@store,@product] do |f|
	- if @product.errors.any?
		#error_explanation
			%h2= "#{pluralize(@product.errors.count, "error")} prohibited this product from being saved:"
			%ul
				- @product.errors.full_messages.each do |msg|
					%li= msg

	.field
		= f.label :name
		= f.text_field :name
	.field
		= f.label :qty
		= f.text_field :qty
	.field
		= f.label :color
		= f.text_field :color
	.field
		= f.label :size
		= f.text_field :size
	.actions
		= f.submit 'Save'
